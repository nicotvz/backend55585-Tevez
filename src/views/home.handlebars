                class="block py-2.5 px-0 w-full text-sm text-slate-200 bg-transparent border-0 border-b-2 border-gray-600 appearance-none focus:outline-none focus:ring-0 focus:border-blue-500 peer"
                placeholder=" "
                type="text"
                name="cid"
                id="cid"
                required
              />
              <label
                class="peer-focus:font-medium absolute text-sm text-slate-200 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-90 peer-focus:-translate-y-6"
                for="cid"
              >Cart ID</label>
            </div>
          </form>
          <a href="product/{{this._id}}">
            <button
              class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-500 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mt-2"
            >Product Details</button>
          </a>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="flex flex-row justify-center m-4">
    {{#if hasPrevPage}}
      <a prevPage="{{prevPage}}" id="prevLink"><button
          class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-500 font-medium rounded-lg text-sm w-full sm:w-auto px-8 py-2.5 text-center ml-2"
        >Previous</button></a>
    {{/if}}

    <p
      class="text-slate-100 bg-gray-500/50 focus:ring-4 focus:outline-none focus:ring-blue-500 font-medium rounded-lg text-sm w-full sm:w-auto px-6 py-2.5 text-center mx-4"
    >{{page}}</p>

    {{#if hasNextPage}}
      <a nextPage="{{nextPage}}" id="nextLink"><button
          class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-500 font-medium rounded-lg text-sm w-full sm:w-auto px-8 py-2.5 text-center ml-2"
        >Next</button></a>
    {{/if}}
  </div>
  <div class="w-auto mx-2">
    <br /><hr /><br />
  </div>
  <div class="flex justify-around w-auto m-2 bg-gray-800 px-4 py-4">
    <h3 class="flex p-2 justify-center font-mono text-lg text-slate-200">Views
