<div id="app" class="p-4 bg-slate-800/95 h-auto">
  <h1
    class="flex p-4 mb-4 justify-center font-mono text-2xl text-slate-200"
  >Welcome to NGaming!</h1>

  <div class="w-auto mx-2">
    <br /><hr /><br />
  </div>

  <h1 class="flex p-2 justify-center font-mono text-2xl text-slate-200">Details
    for Cart ID
    <span id="cartId">{{cart._id}}</span></h1>
  <div id="cartDetail" class="flex flex-col justify-center m-6 items-center">
    {{#each cart.products}}
      <div
        class="max-w-4xl border rounded-lg shadow bg-gray-700/50 border-gray-600 my-2"
        id="{{this.productId._id}}"
      >
        <div class="flex flex-wrap w-full p-2 justify-evenly">
          <img
            src="http://localhost:8080/{{lookup this.productId.thumbnails 0}}"
            alt="product image"
            class="aspect-square max-h-32 m-2 ring-4 rounded-xl"
          />
          <div class="px-5 mt-2">
            <h5
              class="text-2xl font-semibold tracking-tight text-white text-center"
            >{{this.productId.title}}</h5>
            <p class="font-light tracking-tight text-white my-1">Selected quantity: {{this.quantity}}</p>
            <p class="font-light tracking-tight text-white my-1">Unit price: ${{this.productId.price}}</p>
            <div class="flex justify-between">
            <p class="text-lg tracking-wider text-white my-1"
            >Total price: ${{multiply this.productId.price this.quantity}}</p>
            <form class="flex justify-end" id="removeFromCartForm-{{this.productId._id}}">
                <button
                  type="submit"
                  class="text-slate-100 bg-red-700 hover:bg-red-800 focus:ring-2 focus:outline-none focus:ring-red-500 font-medium rounded-lg text-xs w-full sm:w-auto px-3 py-1.5 text-center"
                >Remove</span></button>
            </form>
            </div>
          </div>
        </div>

      </div>
    {{/each}}
  </div>
  <div class="w-auto mx-2">
    <br /><hr /><br />
  </div>
  <div class="flex justify-between w-auto m-2 bg-gray-800 px-8 py-8 rounded-xl">
    <h3 class="flex p-2 justify-center font-mono text-lg text-slate-200">Go back
      to the homepage:</h3>
    <a href="/">
      <button
        class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
      >Take me home! üèöÔ∏è</button>
    </a>
  </div>
  <div class="w-auto mx-2">
    <br /><hr /><br />
  </div>
  <div class="flex justify-between w-auto m-2 bg-gray-800 px-8 py-8 rounded-xl">
    <h3 class="flex p-2 justify-center font-mono text-lg text-slate-200">Check
      our work with Socket.io, MongoDB and Mongoose:</h3>
    <a href="/realTimeProducts">
      <button
        class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
      >Go to Real Time section! üõ©Ô∏è</button>
    </a>
  </div>
  <div class="w-auto mx-2">
    <br /><hr /><br />
  </div>
  <div class="flex justify-between w-auto m-2 bg-gray-800 px-8 py-8 rounded-xl">
    <h3 class="flex p-2 justify-center font-mono text-lg text-slate-200">Chat
      with us:</h3>
    <a href="/chat">
      <button
        class="text-slate-100 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
      >Go to chat section! üí¨</button>
    </a>
  </div>
</div>
